{% extends 'base.html.twig' %}

{% block breadcrumbs %}

    {% if app.request.query.get('form')['category'] %}
        <li><a href="{{ url('app_product_index') }}">Products</a></li>
        <li class="active">{{ app.request.query.get('form')['category'] }}</li>
    {% else %}
        <li class="active">Products</li>
    {% endif %}

{% endblock %}

{% block body %}
    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- ASIDE -->
                <div id="aside" class="col-md-3">
                    <!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Filter by Brand</h3>
                        <ul class="list-links">
                            {% for category in categories %}
                                <li class="{% if app.request.query.get('form')['category'] in category.name %} active {% endif %}">
                                    <a href="{{ url('app_product_index', {'category': category.name}) }}">
                                        {{ category.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <!-- /aside widget -->

                    {#<!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Filter by Price</h3>
                        <div id="price-slider"></div>
                    </div>
                    <!-- aside widget -->#}

                </div>

                <div id="main" class="col-md-9">
                    <!-- store top filter -->
                    <div class="store-filter clearfix">
                        <div class="pull-left">
                            <div class="row-filter">
                                <a href="#"><i class="fa fa-th-large"></i></a>
                                <a href="#" class="active"><i class="fa fa-bars"></i></a>
                            </div>
                            <div class="sort-filter">
                                <span class="text-uppercase">Sort By:</span>
                                <select class="input">
                                    <option value="0">Position</option>
                                    <option value="0">Price</option>
                                    <option value="0">Rating</option>
                                </select>
                                <a href="#" class="main-btn icon-btn"><i class="fa fa-arrow-down"></i></a>
                            </div>
                        </div>
                        <div class="pull-right">
                            <div class="page-filter">
                                <span class="text-uppercase">Show:</span>
                                <select id="select_filter" class="input">
                                    <option value="6">6</option>
                                    <option value="9">9</option>
                                    <option value="12">12</option>
                                </select>
                            </div>
                            <ul id="list_page_filter" class="store-pages">
                                {#<li><span class="text-uppercase">Page:</span></li>
                                <li class="active">1</li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#"><i class="fa fa-caret-right"></i></a></li>#}
                            </ul>
                        </div>
                    </div>
                    <!-- /store top filter -->

                    <!-- STORE -->
                    <div id="store">
                        <!-- row -->
                        <h2 align="center">Results for "{{ text_searched }}"</h2>
                        <div id="listing_products" class="row">

                            {% if products %}

                                {% for product in products %}
                                    <!-- Product Single -->
                                    <div class="product_single_to_innerHTML">
                                        <div class="col-md-4 col-sm-6 col-xs-6">
                                            <div class="product product-single">
                                                <div class="product-thumb">
                                                    <div class="product-label">
                                                        <span>New</span>
                                                    </div>
                                                    <a href="{{ url('app_product_view', {'product_name': product.name}) }}" class="main-btn quick-view"><i class="fa fa-search-plus"></i> View</a>
                                                    <img src="http://placehold.it/320x150" alt="">
                                                </div>
                                                <div class="product-body">
                                                    <h3 class="product-price">â‚¬{{ product.price }}</h3>
                                                    <div class="product-rating">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star-o empty"></i>
                                                    </div>
                                                    <h2 class="product-name"><a href="{{ url('app_product_view', {'product_name': product.name}) }}">{{ product.name }}</a></h2>
                                                    {{ product.description|slice(0,120)|raw }}...
                                                    <div class="product-btns">
                                                        <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                                                        <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                                                        <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /Product Single -->
                                {% endfor %}

                            {% else %}

                                {% if text_searched %}
                                    <h2 align="center">Products not found for "{{ text_searched }}"</h2>

                                    {% if category_selected %}
                                        <h2 align="center">and "{{ category_selected }}"</h2>
                                    {% endif %}

                                {% endif %}

                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/pagination.js') }}"></script>
{% endblock %}
