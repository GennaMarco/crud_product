{% extends 'admin.html.twig' %}

{% block body %}
    <div class="content container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="box box-info">
                    <div class="box-header with-border text-center">
                        <h3 class="box-title">New Category</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    {{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}
                        <div class="box-body">
                            <div class="form-group">
                                {{ form_label(form.name, null, { 'label_attr' : { 'class': 'col-sm-2 control-label' } }) }}
                                {{ form_errors(form.name) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.name, {'attr': { 'class': 'form-control' }}) }}
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <a href="{{ url('admin_category_index') }}" class="btn btn-default" role="button"><span class="glyphicon glyphicon-remove-circle"></span> Cancel</a>
                            <button type="submit" class="btn btn-success pull-right"><span class="glyphicon glyphicon-floppy-disk"></span> Create</button>
                        </div>
                        <!-- /.box-footer -->
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
{% endblock %}
